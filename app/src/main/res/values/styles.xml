<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#CEE08C</item>
        <item name="colorPrimaryDark">#aab857</item>
        <item name="colorAccent">#464646</item>
        <item name="secondaryClr">#D1DBDA</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="blueOcean" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#8CC2E0</item>
        <item name="colorPrimaryDark">#5788b8</item>
        <item name="colorAccent">#464646</item>
        <item name="secondaryClr">#D1DBDA</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="wine" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#C0364D</item>
        <item name="colorPrimaryDark">#a41537</item>
        <item name="colorAccent">#E8E5E3</item>
        <item name="secondaryClr">#D1DBDA</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="banana" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#F4F1E0</item>
        <item name="colorPrimaryDark">#E4CB66</item>
        <item name="colorAccent">#332E42</item>
        <item name="secondaryClr">#4f4132</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
